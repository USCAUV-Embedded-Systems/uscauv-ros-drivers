#!/usr/bin/env python2.7

#simplePingExample.py
from brping import Ping1D
import time
import rospy
from builtins import input
from std_msgs.msg import String

#Make a new Ping
myPing = Ping1D("/dev/ttyUSB0", 115200)
if myPing.initialize() is False:
    print("Failed to initialize Ping!")
    exit(1)

print("------------------------------------")
print("Starting Ping..")
print("Press CTRL+C to exit")
print("------------------------------------")

input("Press Enter to continue...")

#myPing.set_speed_of_sound(1450000) #speed for water
myPing.set_speed_of_sound(343000) #speef for air

# initialize publisher
def talker():
    pub = rospy.Publisher('br_echo', String, queue_size=10)
    rospy.init_node('talker', anonymous=True)
    rate = rospy.Rate(10)
    pub.publish("hello")

# Read and print distance measurements with confidence
while True:
    print("Begin while loop")
    data = myPing.get_distance()
    if data:
        print("Distance: %s\tConfidence: %s%%" % (data["distance"], data["confidence"]))
        talker()
    else:
        print("Failed to get distance data")
    time.sleep(0.1)
